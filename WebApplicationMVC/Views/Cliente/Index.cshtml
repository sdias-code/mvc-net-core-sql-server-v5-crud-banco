@model IEnumerable<WebApplicationMVC.Models.ClienteModel>

@{
    ViewData["Title"] = "ListarTodos";
}

<h1>Listar Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" role="button">Cadastrar Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mr-1" role="button">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary mr-1" role="button">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" role="button">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
